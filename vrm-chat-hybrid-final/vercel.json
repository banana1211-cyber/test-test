{
  "version": 2,
  "name": "vrm-chat-hybrid-final",
  "functions": {
    "api/chat.js": {
      "runtime": "nodejs18.x",
      "maxDuration": 30
    },
    "api/speak.js": {
      "runtime": "nodejs18.x",
      "maxDuration": 30
    },
    "api/ping.js": {
      "runtime": "nodejs18.x",
      "maxDuration": 10
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization, x-api-key"
        }
      ]
    }
  ]
}

